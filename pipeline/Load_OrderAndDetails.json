{
	"name": "Load_OrderAndDetails",
	"properties": {
		"description": "Orders and Details are in same colletion but each has own document type attribute.",
		"activities": [
			{
				"name": "Order",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "DECLARE @Result as varchar(max)\nSET @Result =\n(\n\nSELECT   [dbo].[Orders].orderID , \nOrderDate, \nFirstName, \nLastName, \nAddress,\nCity, \nState, \nPostalCode, \nCountry, \nPhone, \nSMSOptin, \nSMSStatus, \nOrders.Email, \nReceiptUrl,\nTotal, \nPaymentTransactionId,\nHasBeenShipped,\n    (\n        SELECT OrderDetailId,\nProductId,\nQuantity,\nUnitPrice \n        FROM [dbo].[OrderDetails]  \n\t\twhere [dbo].[Orders].orderid = [dbo].[OrderDetails].orderid\n        FOR JSON auto\n    ) AS [OrderDetails]\nFROM [dbo].[Orders]  \nFOR JSON PATH, ROOT('orderid')\n\n\n)\n\nselect  @Result\n\n",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "CosmosDbSqlApiSink",
						"writeBehavior": "insert",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"sink": {
									"path": "$['orderID']"
								}
							},
							{
								"sink": {
									"path": "$['OrderDate']"
								}
							},
							{
								"sink": {
									"path": "$['FirstName']"
								}
							},
							{
								"sink": {
									"path": "$['LastName']"
								}
							},
							{
								"sink": {
									"path": "$['Address']"
								}
							},
							{
								"sink": {
									"path": "$['City']"
								}
							},
							{
								"sink": {
									"path": "$['State']"
								}
							},
							{
								"sink": {
									"path": "$['PostalCode']"
								}
							},
							{
								"sink": {
									"path": "$['Country']"
								}
							},
							{
								"sink": {
									"path": "$['Phone']"
								}
							},
							{
								"sink": {
									"path": "$['SMSOptin']"
								}
							},
							{
								"sink": {
									"path": "$['Email']"
								}
							},
							{
								"sink": {
									"path": "$['Total']"
								}
							},
							{
								"sink": {
									"path": "$['PaymentTransactionId']"
								}
							},
							{
								"sink": {
									"path": "$['HasBeenShipped']"
								}
							},
							{
								"sink": {
									"path": "$['OrderDetails'][0]['OrderDetailId']"
								}
							},
							{
								"sink": {
									"path": "$['OrderDetails'][0]['ProductId']"
								}
							},
							{
								"sink": {
									"path": "$['OrderDetails'][0]['Quantity']"
								}
							},
							{
								"sink": {
									"path": "$['OrderDetails'][0]['UnitPrice']"
								}
							},
							{
								"sink": {
									"path": "$['id']"
								}
							},
							{
								"sink": {
									"path": "$['_rid']"
								}
							},
							{
								"sink": {
									"path": "$['_self']"
								}
							},
							{
								"sink": {
									"path": "$['_etag']"
								}
							},
							{
								"sink": {
									"path": "$['_attachments']"
								}
							},
							{
								"sink": {
									"path": "$['_ts']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Orders_SQL",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "OrderAndDetail_Cosmos",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}